                    No Slides
                  <% else %>
                    <a href="<%=cra_solution.slides%>">Slides</a>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <tr>
            <td>
              <strong>14.40</strong>
            </td>
            <td>
              <strong>Introduction to the Live Contest and solutions</strong>
              <a href="2017_TTC_Live.pdf">Slides</a>
            </td>
          </tr>
            <tr>
              <td>
                <strong>16.00</strong>
              </td>
              <td>
                <strong>Awards and Wrap Up</strong>
              </td>
            </tr>
            <tr>
              <td>
                <strong>16.30</strong>
              </td>
              <td>
                <strong>Contest ends</strong>
              </td>
            </tr>
          </tbody>
